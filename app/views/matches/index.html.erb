
<div id="matches-index-container">
  <div id="matches-padding">
  <h2 id="all-match">All Matches for <%= current_user['first_name'] %></h2>

  <div id="all-matches-container">
    <h4> Upcoming Matches </h4>
    <% if @upcoming_matches.count > 0 %>
      <% @upcoming_matches[0..10].each do |match| %>
        <% match.each do |category,details| %>
          <% sport_icon = SportsHelper.get_sport_icon(category) %>
          <div class='match-details-container'><%= image_tag(sport_icon, alt: 'sport-icon')%> <%= category %> <%= link_to("Details", user_match_path(current_user["id"], match[category]['id'])) %><br>
            <div class="details-container">
              <i class="fa fa-map-marker" aria-hidden="true"></i> <%= details['location'].gsub(/"|\[|\]/, '') %><br>
              <i class="fa fa-clock-o" aria-hidden="true"></i> <%= details['date'] %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <% if @past_matches.count > 0 %>
    <h4> Past Matches </h4>
      <% @past_matches[0..10].each do |match| %>
        <% match.each do |category,details| %>
          <% sport_icon = SportsHelper.get_sport_icon(category) %>
          <div class='match-details-container'><%= image_tag(sport_icon, alt: 'sport-icon')%> <%= category %> <%= link_to("Details", user_match_path(current_user["id"], match[category]['id'])) %><br>
            <div class="details-container">
              <i class="fa fa-map-marker" aria-hidden="true"></i> <%= details['location'] %><br>
              <i class="fa fa-clock-o" aria-hidden="true"></i> <%= details['date'] %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  </div>
