<h2>User Show Page</h2>


<div class="user-info-container">
  <h4>User Info:</h4>

  <% if @user %>
    <p> <i class="fa fa-child" aria-hidden="true"></i>
      <span class="profile">
        <%= @user['first_name'] %> <%= @user['last_name'] %>
      </span> </p>
    <p> <i class="fa fa-envelope" aria-hidden="true"></i>
      <span class="profile">
        <%= @user['email'] %>
      </span> </p>
    <p> <i class="fa fa-building" aria-hidden="true"></i>
      <span class="profile">
        <%= @user['street'] %>, <%= @user['city'] %>, <%= @user['state'] %> <%= @user['zip'] %>
      </span> </p>
    <p> <i class="fa fa-phone" aria-hidden="true"></i>
      <span class="profile">
        <%= @user['phone'] %>
      </span> </p>
  <% end %>
</div>

<div class="stats-container">
  <% if @stats %>
  <h4>User Stats:</h4>
    <% @stats.each do |k, sport| %>
      <%if sport[1]['name'] == "tennis"%>
        <% if sport[1]['total_players'] == 2 %>
          Tennis Singles Stats:<br>
          Number of Wins: <%= sport[0]['win'] %><br>
          Rating: <%= sport[0]['rating'] %><br>
          Division: <%= sport[0]['division'] %><br><br>
        <% elsif sport[1]['total_players'] == 4 %>
          Tennis Doubles Stats:<br>
          Number of Wins: <%= sport[0]['win'] %><br>
          Rating: <%= sport[0]['rating'] %><br>
          Division: <%= sport[0]['division'] %><br><br>
        <% end %>
      <% elsif sport[1]['name'] == "soccer"%>
        Soccer stats:<br>
        Number of Wins: <%= sport[0]['win'] %><br>
        Rating: <%= sport[0]['rating'] %><br>
        Division: <%= sport[0]['division'] %><br><br>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="matches-container">
  <h4>Upcoming Matches:</h4>
  <h4>Recent Matches:</h4>
  <%= link_to 'All Past Matches', '#' %>
</div>
