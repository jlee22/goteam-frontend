<div id="user-show-page-container">

    <div class="user-show-container">

      <div class="user-info-container">
        <% if @user %>
        <div class="profile-pic">
          <%= image_tag('profile_pic/JLok.jpg')  %>
        </div>
        <h4>User Info:</h4>
          <p> <i class="fa fa-user-circle" aria-hidden="true"></i>
            <span class="profile">
              <%= @user['first_name'] %> <%= @user['last_name'] %>
            </span> </p>
          <p> <i class="fa fa-envelope-square" aria-hidden="true"></i>
            <span class="profile">
              <%= @user['email'] %>
            </span> </p>
          <p> <i class="fa fa-building" aria-hidden="true"></i>
            <span class="profile">
              <%= @user['street'] %>, <%= @user['city'] %>, <%= @user['state'] %> <%= @user['zip'] %>
            </span> </p>
          <p> <i class="fa fa-phone-square" aria-hidden="true"></i>
            <span class="profile">
              <%= @user['phone'] %>
            </span> </p>
        <% end %>
        <h4 class='btn btn-primary'><%= link_to 'Play Sports!!', sports_path %></h4>
      </div>

      <div class="stats-container">
        <% if @stats %>
        <h4>User Stats:</h4>
          <% @stats.each do |k, sport| %>
          <div class='card card-block'>
              <p><%if sport[1]['category'] == "Tennis"%>
                Tennis <%= sport[1]['name'] %> Stats:<br>
                Rating: <%= sport[0]['rating'] %><br>
                Division: <%= sport[0]['division'] %></p>
              <p><% elsif sport[1]['category'] == "Soccer"%>
                Soccer <%= sport[1]['name'] %> Stats:<br>
                Rating: <%= sport[0]['rating'] %><br>
                Division: <%= sport[0]['division'] %></p>
              <p><% elsif sport[1]['category'] == "Badminton"%>
                Badminton <%= sport[1]['name'] %> Stats:<br>
                Rating: <%= sport[0]['rating'] %><br>
                Division: <%= sport[0]['division'] %></p>
            <% end %>
          </div>
          <% end %>
        <% end %>
      </div>

      <div class="matches-container">
        <% if @upcoming_matches.count > 0 %>
        <h4> Upcoming Matches: </h4>
          <% @upcoming_matches.each do |match| %>
            <% match.each do |category,details| %>
              <% sport_icon = SportsHelper.get_sport_icon(category) %>
              <div class='match-details-container card card-block'><%= image_tag(sport_icon, alt: 'sport-icon')%> <%= link_to category, user_match_path(current_user['id'],match[category]['id']) %><br>
                <div class="details-container card-text">
                  <i class="fa fa-map-marker" aria-hidden="true"></i> <%= details['location'] %><br>
                  <i class="fa fa-clock-o" aria-hidden="true"></i> <%= details['date'] %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <% if @past_matches.count > 0 %>
        <h4> Past Matches: </h4>
          <% @past_matches.each do |match| %>
            <% match.each do |category,details| %>
              <% sport_icon = SportsHelper.get_sport_icon(category) %>
              <div class='match-details-container card card-block'><%= image_tag(sport_icon, alt: 'sport-icon')%> <%= category %><br>
                <div class="details-container">
                  <i class="fa fa-map-marker" aria-hidden="true"></i> <%= details['location'] %><br>
                  <i class="fa fa-clock-o" aria-hidden="true"></i> <%= details['date'] %>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <br>
        <div class="btn btn-primary">
        <%= link_to 'All Past Matches', user_matches_path(current_user['id']) %></div>
      </div>
    </div>

</div>
